{
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-undef":"error",
        "no-console":[
            "error",
            {
                "allow":[
                    "warn",
                    "error",
                    "log"
                ]
            }
        ]
    }
}